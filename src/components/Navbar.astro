---
const links = [
  { name: 'Inicio', href: '#hero' },
  { name: 'Proyectos', href: '#projects' },
  { name: 'El Squad', href: '#team' },
  { name: 'Servicios', href: '#services' },
];

// Puedes cambiar este número por el tuyo
const phoneNumber = '+1 (555) 123-4567';
const phoneLink = 'tel:+15551234567';
---

<nav class="fixed top-0 w-full z-50 glass border-b border-white/5">
    <div class="max-w-7xl mx-auto px-6 py-4">
        <div class="flex justify-between items-center">
            <!-- Logo completo con texto -->
            <a href="/" class="flex items-center group">
                <img 
                    src="/Sharkcorp.png" 
                    alt="SharkCorp - Web Programming Startup" 
                    class="h-20 w-auto object-contain transition-transform duration-300 group-hover:scale-105" 
                />
            </a>
            
            <!-- Links de Navegación con Iconos -->
            <div class="hidden md:flex items-center gap-6">
                <ul class="flex items-center gap-6">
                    <!-- Inicio -->
                    <li>
                        <a 
                            href="#hero" 
                            class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 relative group"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                            </svg>
                            <span>Inicio</span>
                            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-shark-accent transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </li>
                    
                    <!-- Proyectos -->
                    <li>
                        <a 
                            href="#projects" 
                            class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 relative group"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                            </svg>
                            <span>Proyectos</span>
                            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-shark-accent transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </li>
                    
                    <!-- El Squad -->
                    <li>
                        <a 
                            href="#team" 
                            class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 relative group"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                            </svg>
                            <span>El Squad</span>
                            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-shark-accent transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </li>
                    
                    <!-- Servicios -->
                    <li>
                        <a 
                            href="#services" 
                            class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 relative group"
                        >
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                            </svg>
                            <span>Servicios</span>
                            <span class="absolute -bottom-1 left-0 w-0 h-0.5 bg-shark-accent transition-all duration-300 group-hover:w-full"></span>
                        </a>
                    </li>
                </ul>
                
                <!-- Separador -->
                <div class="h-6 w-px bg-white/10"></div>
                
                <!-- Número de Teléfono -->
                <a 
                    href={phoneLink}
                    class="flex items-center gap-2 text-sm font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 group"
                    title="Llamar ahora"
                >
                    <svg class="w-5 h-5 transition-transform group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                    <span class="font-mono">{phoneNumber}</span>
                </a>
                
                <!-- CTA Button -->
                <a 
                    href="#contact" 
                    class="btn-ripple btn-lift px-6 py-2.5 text-xs font-bold uppercase tracking-widest border-2 border-shark-accent/40 text-shark-accent hover:bg-shark-accent hover:text-shark-950 hover:border-shark-accent transition-all duration-300 rounded-sm shadow-lg shadow-shark-accent/0 hover:shadow-shark-accent/20"
                >
                    Hablemos
                </a>
            </div>

            <!-- Mobile Menu Button -->
            <button 
                id="mobile-menu-btn"
                class="md:hidden text-shark-accent p-2 hover:bg-shark-accent/10 rounded transition-colors"
                aria-label="Toggle menu"
            >
                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
            </button>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-white/5 pt-4">
            <ul class="flex flex-col gap-4">
                {links.map(link => (
                    <li>
                        <a 
                            href={link.href} 
                            class="block text-base font-medium text-gray-400 hover:text-shark-accent transition-colors duration-300 py-2"
                        >
                            {link.name}
                        </a>
                    </li>
                ))}
                <li class="pt-2">
                    <a 
                        href="#contact" 
                        class="block text-center px-6 py-3 text-xs font-bold uppercase tracking-widest border-2 border-shark-accent/40 text-shark-accent hover:bg-shark-accent hover:text-shark-950 transition-all duration-300 rounded-sm"
                    >
                        Hablemos
                    </a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<script>
    // Mobile menu toggle
    const mobileMenuBtn = document.getElementById('mobile-menu-btn');
    const mobileMenu = document.getElementById('mobile-menu');
    
    mobileMenuBtn?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
    });

    // Close mobile menu when clicking a link
    const mobileLinks = mobileMenu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
        link.addEventListener('click', () => {
            mobileMenu?.classList.add('hidden');
        });
    });

    // Smooth scroll for anchor links
    document.querySelectorAll('a[href^="#"]').forEach(anchor => {
        anchor.addEventListener('click', function (e: Event) {
            e.preventDefault();
            const href = (e.currentTarget as HTMLAnchorElement).getAttribute('href');
            if (href) {
                const target = document.querySelector(href);
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            }
        });
    });
</script>
