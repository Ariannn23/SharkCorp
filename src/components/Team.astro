---
const team = [
  {
    name: "Alex 'Architect' V.",
    role: "Lead Fullstack",
    stack: "Architect & Astro",
    initials: "AV",
    social: "#"
  },
  {
    name: "Sarah 'Pixel' J.",
    role: "Frontend Magician",
    stack: "React & Motion",
    initials: "SJ",
    social: "#"
  },
  {
    name: "Mike 'Daemon' R.",
    role: "Backend & Cloud",
    stack: "Node & AWS",
    initials: "MR",
    social: "#"
  },
];
---

<section id="team" class="py-24 px-6 relative">
    <div class="max-w-7xl mx-auto">
        <div class="mb-16 text-center">
             <h2 class="text-4xl md:text-5xl font-display font-bold text-white mb-4">THE SQUAD</h2>
             <p class="text-gray-400">El n√∫cleo de procesamiento de SharkCorp.</p>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            {team.map(member => (
                <div class="glass p-8 rounded-sm group hover:border-shark-accent/50 transition-colors duration-300">
                    <div class="w-full aspect-square mb-6 overflow-hidden rounded-sm bg-gradient-to-br from-shark-900 to-shark-950 border border-white/10 relative flex items-center justify-center group-hover:border-shark-accent/50 transition-all duration-500">
                        <!-- SVG Avatar Icon -->
                        <svg viewBox="0 0 200 200" class="w-full h-full p-8">
                            <!-- Background Circle -->
                            <circle cx="100" cy="100" r="90" fill="url(#gradient)" opacity="0.2" class="group-hover:opacity-30 transition-opacity duration-500"/>
                            
                            <!-- User Icon -->
                            <circle cx="100" cy="75" r="30" fill="#00e5ff" opacity="0.8"/>
                            <path d="M 50 150 Q 50 110, 100 110 Q 150 110, 150 150 L 150 160 L 50 160 Z" fill="#00e5ff" opacity="0.8"/>
                            
                            <!-- Gradient Definition -->
                            <defs>
                                <linearGradient id="gradient" x1="0%" y1="0%" x2="100%" y2="100%">
                                    <stop offset="0%" style="stop-color:#00e5ff;stop-opacity:1" />
                                    <stop offset="100%" style="stop-color:#00b8d4;stop-opacity:1" />
                                </linearGradient>
                            </defs>
                        </svg>
                        
                        <!-- Hover Overlay -->
                        <div class="absolute inset-0 bg-shark-accent/10 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    </div>
                    <h3 class="text-2xl font-display text-white mb-1 group-hover:text-shark-accent transition-colors">{member.name}</h3>
                    <p class="text-shark-accent text-sm font-bold uppercase tracking-wider mb-4">{member.role}</p>
                    <div class="h-px w-10 bg-white/20 mb-4 group-hover:w-full group-hover:bg-shark-accent/50 transition-all duration-500"></div>
                    <p class="text-gray-400 text-sm mb-6 font-mono">Stack: {member.stack}</p>
                    
                    <a href={member.social} class="inline-flex items-center text-sm text-gray-400 hover:text-white transition-colors">
                        <span class="mr-2">LinkedIn / GitHub</span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                        </svg>
                    </a>
                </div>
            ))}
        </div>
    </div>
</section>
