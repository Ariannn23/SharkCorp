---
// Contact Form Component
---

<section id="contact" class="relative py-32 px-6 overflow-hidden">
    <!-- Background Effects -->
    <div class="absolute inset-0 bg-gradient-to-b from-shark-950 via-shark-900/50 to-shark-950"></div>
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-full h-full max-w-4xl bg-shark-accent/5 blur-3xl"></div>
    
    <div class="max-w-4xl mx-auto relative z-10">
        <!-- Header -->
        <div class="text-center mb-16">
            <h2 class="text-5xl md:text-6xl font-display font-bold mb-6 tracking-tight">
                Hablemos de tu
                <span class="text-shark-accent">Proyecto</span>
            </h2>
            <p class="text-xl text-gray-400 max-w-2xl mx-auto">
                ¿Tienes una idea? Estamos listos para convertirla en realidad. Completa el formulario y nos pondremos en contacto contigo.
            </p>
        </div>

        <!-- Contact Form -->
        <form class="glass p-8 md:p-12 rounded-lg border border-white/10 space-y-6">
            <!-- Name and Last Name Row -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- First Name -->
                <div class="space-y-2">
                    <label for="firstName" class="block text-sm font-medium text-gray-300">
                        Nombre <span class="text-shark-accent">*</span>
                    </label>
                    <input
                        type="text"
                        id="firstName"
                        name="firstName"
                        required
                        class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white placeholder-gray-500 focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300"
                        placeholder="Juan"
                    />
                </div>

                <!-- Last Name -->
                <div class="space-y-2">
                    <label for="lastName" class="block text-sm font-medium text-gray-300">
                        Apellidos <span class="text-shark-accent">*</span>
                    </label>
                    <input
                        type="text"
                        id="lastName"
                        name="lastName"
                        required
                        class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white placeholder-gray-500 focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300"
                        placeholder="Pérez García"
                    />
                </div>
            </div>

            <!-- Email and Phone Row -->
            <div class="grid md:grid-cols-2 gap-6">
                <!-- Email -->
                <div class="space-y-2">
                    <label for="email" class="block text-sm font-medium text-gray-300">
                        Email <span class="text-shark-accent">*</span>
                    </label>
                    <input
                        type="email"
                        id="email"
                        name="email"
                        required
                        class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white placeholder-gray-500 focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300"
                        placeholder="juan@ejemplo.com"
                    />
                </div>

                <!-- Phone -->
                <div class="space-y-2">
                    <label for="phone" class="block text-sm font-medium text-gray-300">
                        Teléfono <span class="text-shark-accent">*</span>
                    </label>
                    <input
                        type="tel"
                        id="phone"
                        name="phone"
                        required
                        class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white placeholder-gray-500 focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300"
                        placeholder="+1 (555) 123-4567"
                    />
                </div>
            </div>

            <!-- Inquiry Type -->
            <div class="space-y-2">
                <label for="inquiryType" class="block text-sm font-medium text-gray-300">
                    Tipo de Consulta <span class="text-shark-accent">*</span>
                </label>
                <div class="relative">
                    <select
                        id="inquiryType"
                        name="inquiryType"
                        required
                        class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300 appearance-none cursor-pointer"
                    >
                        <option value="" disabled selected class="bg-shark-900">Selecciona una opción</option>
                        <option value="consulta-rapida" class="bg-shark-900">Consulta Rápida</option>
                        <option value="proyecto-nuevo" class="bg-shark-900">Proyecto Nuevo</option>
                        <option value="desarrollo-web" class="bg-shark-900">Desarrollo Web</option>
                        <option value="desarrollo-movil" class="bg-shark-900">Desarrollo Móvil</option>
                        <option value="consultoria" class="bg-shark-900">Consultoría Técnica</option>
                        <option value="soporte" class="bg-shark-900">Soporte y Mantenimiento</option>
                        <option value="otro" class="bg-shark-900">Otro</option>
                    </select>
                    <!-- Custom Arrow -->
                    <div class="absolute right-4 top-1/2 -translate-y-1/2 pointer-events-none">
                        <svg class="w-5 h-5 text-shark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                    </div>
                </div>
            </div>

            <!-- Message -->
            <div class="space-y-2">
                <label for="message" class="block text-sm font-medium text-gray-300">
                    Mensaje <span class="text-shark-accent">*</span>
                </label>
                <textarea
                    id="message"
                    name="message"
                    required
                    rows="6"
                    class="w-full px-4 py-3 bg-shark-900/50 border border-white/10 rounded-sm text-white placeholder-gray-500 focus:outline-none focus:border-shark-accent focus:ring-1 focus:ring-shark-accent transition-all duration-300 resize-none"
                    placeholder="Cuéntanos sobre tu proyecto o consulta..."
                ></textarea>
            </div>

            <!-- Submit Button -->
            <div class="flex justify-center pt-4">
                <button
                    type="submit"
                    class="btn-premium btn-ripple btn-lift btn-icon-slide group relative px-8 py-4 bg-shark-accent text-shark-950 font-bold uppercase tracking-widest rounded-sm overflow-hidden transition-all duration-300 hover:shadow-lg hover:shadow-shark-accent/50 hover:scale-105"
                >
                    <span class="relative z-10 flex items-center gap-3">
                        Enviar Mensaje
                        <svg class="w-5 h-5 transition-transform group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                        </svg>
                    </span>
                    <!-- Hover Effect -->
                    <div class="absolute inset-0 bg-gradient-to-r from-shark-accent to-cyan-400 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                </button>
            </div>

            <!-- Privacy Notice -->
            <p class="text-xs text-gray-500 text-center pt-4">
                Al enviar este formulario, aceptas nuestra política de privacidad. Tus datos están seguros con nosotros.
            </p>
        </form>

        <!-- Contact Info -->
        <div class="grid md:grid-cols-3 gap-6 mt-16">
            <!-- Email -->
            <div class="text-center p-6 glass rounded-lg border border-white/10">
                <div class="w-12 h-12 mx-auto mb-4 bg-shark-accent/10 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-shark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-white mb-2">Email</h3>
                <a href="mailto:contact@sharkcorp.com" class="text-sm text-gray-400 hover:text-shark-accent transition-colors">
                    contact@sharkcorp.com
                </a>
            </div>

            <!-- Phone -->
            <div class="text-center p-6 glass rounded-lg border border-white/10">
                <div class="w-12 h-12 mx-auto mb-4 bg-shark-accent/10 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-shark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-white mb-2">Teléfono</h3>
                <a href="tel:+15551234567" class="text-sm text-gray-400 hover:text-shark-accent transition-colors">
                    +1 (555) 123-4567
                </a>
            </div>

            <!-- Location -->
            <div class="text-center p-6 glass rounded-lg border border-white/10">
                <div class="w-12 h-12 mx-auto mb-4 bg-shark-accent/10 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-shark-accent" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                </div>
                <h3 class="font-bold text-white mb-2">Ubicación</h3>
                <p class="text-sm text-gray-400">
                    San Francisco, CA
                </p>
            </div>
        </div>
    </div>
</section>

<script>
    // Form submission handler
    const contactForm = document.querySelector('form');
    
    contactForm?.addEventListener('submit', async (e) => {
        e.preventDefault();
        
        const formData = new FormData(e.target as HTMLFormElement);
        const data = Object.fromEntries(formData.entries());
        
        console.log('Form submitted:', data);
        
        // Aquí puedes agregar la lógica para enviar el formulario
        // Por ejemplo, usando fetch para enviar a un endpoint
        
        alert('¡Gracias por contactarnos! Te responderemos pronto.');
        (e.target as HTMLFormElement).reset();
    });
</script>
